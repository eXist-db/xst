{
  "name": "@existdb/xst",
  "version": "0.0.0-development",
  "description": "Command line tool to interact with exist-db instances",
  "main": "cli.js",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "xst": "./cli.js"
  },
  "type": "module",
  "engines": {
    "node": "^18.19.0 || >=20.5.0"
  },
  "scripts": {
    "test": "standard && tape 'spec/tests/**/*.js'",
    "test:norest": "tape 'spec/norest/**/*.js'",
    "coverage": "c8 -x 'spec' tape 'spec/tests/**/*.js'",
    "coverage:norest": "c8 -x 'spec' tape 'spec/tests/**/*.js'",
    "lint": "standard --fix"
  },
  "keywords": [
    "exist-db",
    "existdb",
    "exist",
    "xst",
    "db",
    "database",
    "cli"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/eXist-db/xst"
  },
  "author": {
    "name": "Juri Leino",
    "email": "npm@line-o.de"
  },
  "maintainers": [],
  "license": "MIT",
  "dependencies": {
    "@existdb/node-exist": "^5.5.2",
    "bottleneck": "^2.19.5",
    "chalk": "^5.2.0",
    "dotenv": "^17.1.0",
    "env-editor": "^1.1.0",
    "execa": "^9.5.2",
    "fast-glob": "^3.2.12",
    "fflate": "^0.8.2",
    "find-up-simple": "^1.0.1",
    "semver": "^7.3.8",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/github": "^11.0.1",
    "@types/yargs": "^17.0.17",
    "c8": "^10.1.3",
    "conventional-changelog-conventionalcommits": "^9.0.0",
    "semantic-release": "^24.2.3",
    "standard": "^17.0.0",
    "tap-dot": "^2.0.0",
    "tape": "^5.6.1"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/existdb"
  },
  "optionalDependencies": {
    "husky": "^9.1.7"
  }
}
